extends ../layout

block content
  .container
    .row
      .col-md-7(style="background:red")
        embed(src="#{movie.flash}",allowFullScreen="true",quality="high",width="720",height="600",align="middle",type="applicaiton/x-shockwave-flash")
      .col-md-5(style="background:blue")
        dl.dl-horizontal
          dt 电影名字
          dd #{movie.title}
          dt 电影导演
          dd #{movie.doctor}
          dt 电影国家
          dd #{movie.country}
          dt 电影语言
          dd #{movie.language}
          dt 上映年份
          dd #{movie.year}
          dt  电影简介
          dd #{movie.summary}

